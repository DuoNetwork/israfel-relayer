{
	"name": "duo-relayer",
	"version": "1.0.0",
	"private": true,
	"description": "Duo Relayer",
	"author": "FinBook Pte Ltd",
	"scripts": {
		"test": "jest",
		"tslint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts{,x} --fix",
		"server": "ts-node ./src/utils/server",
		"start": "ganache-cli -p 8545 --networkId 50 --db ./0x_testrpc_snapshot -m \"${npm_package_config_mnemonic}\"",
		"download_snapshot": "download --extract --strip 1 --out 0x_testrpc_snapshot ${npm_package_config_snapshot_url}",
		"relayer_ws": "ts-node ./src/relayer_ws/index",
		"init_orderbook": "ts-node ./src/relayer_ws/initializeOrderbook",
		"send_orders": "ts-node ./src/relayer_ws/sendOrdersWithIntervals",
		"actions": "ts-node ./src/actions/index"
	},
	"jest": {
		"roots": [
			"<rootDir>/src"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"config": {
		"mnemonic": "concert load couple harbor equip island argue ramp clarify fence smart topic",
		"snapshot_url": "https://s3.amazonaws.com/testrpc-shapshots/07d00cc515e0f9825b81595386b358593b7a3d6f.zip"
	},
	"devDependencies": {
		"@types/jest": "^23.3.1",
		"@types/request": "^2.47.1",
		"@types/ws": "^6.0.0",
		"download-cli": "^1.1.1",
		"fast-csv": "^2.4.1",
		"firebase-tools": "^4.2.0",
		"jest": "^23.5.0",
		"ts-jest": "^23.1.4",
		"tslint": "^5.11.0"
	},
	"dependencies": {
		"0x.js": "^0.38.6",
		"@0xproject/connect": "^1.0.5",
		"@0xproject/order-watcher": "0.0.8",
		"@0xproject/subproviders": "^2.0.0",
		"@0xproject/utils": "^1.0.7",
		"@0xproject/web3-wrapper": "^2.0.0",
		"@types/express": "^4.16.0",
		"@types/websocket": "0.0.40",
		"bignumber.js": "^7.2.1",
		"body-parser": "^1.18.3",
		"firebase-admin": "^6.0.0",
		"ganache-cli": "^6.1.8",
		"moment": "^2.22.2",
		"request": "^2.88.0",
		"ts-node": "^7.0.1",
		"typescript": "^3.0.1",
		"web3": "^1.0.0-beta.35",
		"web3-provider-engine": "^14.0.6",
		"ws": "^6.0.0"
	}
}
